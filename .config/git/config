  name = jobin_nelson
  email = jobinnelson369@gmail.com
  signingkey = 1197D8169DB72B0C!
[diff]
  tool = nvimdiff
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[difftool "nvimdiff"]
  cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\"
[merge]
  tool = nvimdiff4
  prompt = false
[mergetool "nvimdiff4"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c '$wincmd J'
[core]
  editor = nvim
  excludesfile = ~/.config/git/.gitignore_global
[fetch]
  prune = true
[commit]
  template = ~/.config/git/commit_template.txt
  gpgsign = true
  verbose = true
[alias]
  # log
  hist = log --decorate --graph --parents --all --pretty=format:'%C(green)%h %C(red)%p%Creset -%C(yellow)%d%Creset %s %Cgreen[%cr]%Creset %Cblue[%cn]%Creset' --abbrev-commit --date=relative
  standup = !git log --all --author=\"$(git config user.name)\" --since='9am today' --format='- %s'

  # branch
  which = !git branch -a | grep -i
  lucky = !sh -c 'git checkout $(git which $1 -m1)' -
  activity = !git for-each-ref --count=10 --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)'

  # pull
  spull = pull --rebase --autostash
  rpull = pull --recurse-submodules
  rspull = !git pull --no-recurse-submodules --rebase --autostash && git submodule foreach git pull --rebase --autostash

  # submodule
  subup = submodule update --init --recursive
  rdiff = diff --submodule=diff

  # commit
  discard = !git checkout -- . && git submodule foreach git checkout -- .
  recommit = !git commit --edit --file=\"$(git rev-parse --git-dir)/COMMIT_EDITMSG\" --cleanup=strip
  capush = !git commit --amend --no-edit && git push --force-with-lease
  wip = !git add -A && git commit -m \"[WIP]!: $(date)\"

  # stash
  stsh = stash --keep-index
  staash = stash --include-untracked
  staaash = stash --all
[init]
  defaultBranch = main
[rebase]
  updateRefs = true
[branch]
  sort = -committerdate
[tag]
  sort = -taggerdate
[push]
  default = simple
[help]
  autocorrect = prompt
[rerere]
  enabled = true
  autoupdate = true
[rebase]
  autoSquash = true
  ; autoStash = true
  updateRefs = true
  missingCommitsCheck = warn
[pull]
  rebase = true
[includeIf "gitdir:~/playground/dev/infosys/"]
  path = ~/playground/dev/infosys/.gitconfig
[url "git@github.com:/Jobin-Nelson/"]
  insteadOf = "jn:"
[grep]
  lineNumber = true
